<!--components/selectable.wxml-->
<view class='selectable' hidden='{{isHidden}}'>

  <view class='wx-mask' catchtap='closeSelect'></view>
  <view class='selectable-continer' style='height:250px;'>
      <view class='selectable-btn'style='height:15%;' >
        <view class='st-confirm' catchtap='confirmSelect'>
          <text>确定</text>
        </view>
        <view class='st-cancel' catchtap='closeSelect'>
          <text>取消</text>
        </view>
      </view>
      <view class="search" style='height:15%;'>
        <view class="df search_arr">
          <icon class="searchcion" size='20' type='search'></icon>
          <input class="" disabled placeholder="请输入关键字" value="{{searchValue}}" />
        </view>
      </view>
    <scroll-view scroll-y class='selectable-box' style='height:70%;'>
      <block wx:for="{{selectItems}}" wx:key="{{key}}" wx:index="{{index}}">
        <view class="selectable-item {{index%2==0?'even':'odd'}}" data-index='{{index}}' catchtap='_selectedItem'>
          <view class="label-icon">
            <view class="icon {{item.checked ? 'checked ': ''}}"></view>
          </view>
          <view class='label-image'>
            <image class='image' src='{{item.image}}'></image>
          </view>
          <view class='label-text'>
            <text>{{item.name}}</text>
          </view>
        </view>
      </block>
      <!-- <block wx:if="{{selectItems.length<=0}}">
        <view class='default-selectable'>
          <text>什么都没有~~~</text>
        </view>
      </block> -->
    </scroll-view>
  </view>
</view>