.selectable-btn {
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}

.selectable-btn .st-cancel {
  background: #fff;
  width: 50%;
  padding: 5px;
  text-align: left;
  color: rgb(180, 178, 178);
}

.selectable-btn .st-confirm {
  background: #fff;
  color: rgb(3, 247, 3);
  width: 50%;
  text-align: right;
  padding: 5px;
  float: right;
}

.search {
  width: 100%;
  background: #fff;
  height: 50px;
  padding: 5px;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  width: 90%;
  text-align: center;
  margin: 0 auto;
  /* background: blue; */
   margin-left: 20rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}


