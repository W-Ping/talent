/* client/pages/myself/myself.wxss */

page {
  background: #f6f6f6;
}

.my-container {
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #00abff;
  color: #fff;
  align-items: center;
  height: 80px;
  z-index: 1;
}

.avatar-box {
  width: 25%;
}

.my-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-box {
  width: 55%;
}

.setting-box {
  display: flex;
  flex-direction: row;
  width: 20%;
  font-size: 18px;
}

.menu-continar {
  /* position: fixed; */
  top: 80px;
  left: 0;
  right: 0;
  padding: 2px;
  font-size: 12px;
  font-weight: 500;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  height: 160px;
}

.menu-box {
  background: #fff;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.menu-item {
  width: 33%;
  background: #fff;
  height: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu-image {
  height: 30px;
  width: 30px;
}

.menu-image .image {
  height: 30px;
  width: 30px;
}

