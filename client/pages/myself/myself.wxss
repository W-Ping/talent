.my-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #00abff;
  color: #fff;
  align-items: center;
  height: 80px;
  z-index: 1;
}

.avatar-box {
  width: 25%;
}

.my-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-box {
  width: 55%;
}

.setting-box {
  display: flex;
  flex-direction: row;
  width: 20%;
  font-size: 18px;
}