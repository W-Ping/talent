/* client/pages/template/statistics.wxss */

.stat-plan-box {
  display: flex;
  flex-direction: row;
  width: 98%;
  height: 80px;
  border-radius: 5px;
  background: #fff;
  margin: 5px auto;
}

.spb-day {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:12px; 
  border-radius: 5px 0px 0px 5px;
}

.spb-split {
  width: 1%;
  background: #f6f6f6;
}

.spb-declare {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding-left: 3px;
  width: 79%;
  font-size: 13px;
  border-radius: 0px 5px 5px 0px;
}

.plan-count {
  color: green;
  font-size: 14px;
  font-weight: 600;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

