/**************create-task CSS*****************/

.create-task {
  display: flex;
  flex-direction: column;
  height: 100%;
  font-size: 14px;
}

.ct-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #ccc;
  min-height: 40px;
  height: 100%;
}

.ct-view>view:first-child {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25%;
  border-right: 1px solid #ccc;
}

.ct-view>view:last-child {
  padding-left: 10px;
  width: 75%;
}

.ct-conent {
  padding: 10px;
}

.ct-conent textarea {
  border: 1px solid #ccc;
  min-height: 90px;
  width: 100%;
}

.ct-level-picker {
  /* width: 100%;
  background: red;
  min-width: 80px; */
}

.estimateTime {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.estimateTime>view:first-child {
  width: 50%;
  min-height: 40px;
}

.estimateTime>view:last-child {
  display: flex;
  background: #ccc;
  width: 50%;
  min-height: 40px;
}

.estimateTime input {
  height: 100%;
  min-height: 30px;
}



.ct-remark view:nth-child(1) {
  width: 25%;
  display: flex;
  border-right: 1px solid #ccc;
  height: 100%;
  min-height: 80px;
  align-items: center;
  justify-content: center;
}

.ct-remark view:nth-child(2) {
  width: 75%;
  height: 100%;
  min-height: 80px;
}

.remark-textarea {
  /* padding-left: 10px; */
  /* border: 1px solid #ccc; */
  width: 100%;
  height: 90%;
  min-height: 80px;
}
.save-task-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.handlerText{
  color: blue;
  border-bottom: 1px solid blue;
}