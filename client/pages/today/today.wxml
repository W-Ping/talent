<!--client/pages/today/today.wxml-->
<import src="../template/task.wxml" />
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'task-bar-active' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title ">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <block wx:for="{{todoTaskList}}" wx:for-item="item" wx:for-index="index" wx:key="key">
            <template is="todo-task" data="{{item,index}}" />
          </block>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <block wx:for="{{doingTaskList}}" wx:for-item="item" wx:for-index="index" wx:key="key">
            <template is="doing-task" data="{{item,index}}" />
          </block>
        </view>
        <view class="weui-tab__content " hidden="{{activeIndex != 2}}">
          <block wx:for="{{finishTaskList}}" wx:for-item="item" wx:for-index="index" wx:key="key">
            <template is="finish-task" data="{{item,index}}" />
          </block>
        </view>
      </view>
    </view>
  </view>
</view>